%h2 Settle Your Tab
-@debts.each do |debt|
  -user = debt[0]
  -if(user.picture == nil)
    %img{:src => '/images/defaultprofile.png', :name => user.name}
  -else
    %img{:src => user.picture, :name => user.name}
  -if(user.name == nil)
    ="&nbsp;" + user.email
  -else
    ="&nbsp;" + user.name
  %span.owes &nbsp;&nbsp;owes&nbsp;&nbsp;
  -user = debt[2]
  -if(user.picture == nil)
    %img{:src => '/images/defaultprofile.png', :name => user.name}
  -else
    %img{:src => user.picture, :name => user.name}
  -if(user.name == nil)
    ="&nbsp;" + user.email
  -else
    ="&nbsp;" + user.name
  ="$" + debt[1].round(2).to_s + "."
  %br
  %br
